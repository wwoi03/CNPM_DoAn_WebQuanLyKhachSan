@using CNPM_DoAn_WebQuanLyKhachSan.Models.ViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	var room = ViewBag.room;
}
@model RoomVM

<div class="main-container d-flex">
	<!-- Nội dung bên trái -->
	<div class="left-panel col-8 pl-0 pr-0">
		<div class="content container-fluid">
			<div class="page-header">
				<div class="row align-items-center">
					<div class="col">
						<div class="">
							<h4 class="card-title float-left mt-2" style="font-size: 24px">Tất cả phòng</h4>
							<a class="btn btn-primary float-right veiwbutton" id="roomType-create">Thêm phòng</a>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="card card-table">
						<div class="card-body booking_card">
							<div class="table-responsive">
								<table class="datatable table table-stripped table table-hover table-center mb-0">
									<thead>
										<tr>
											<th style="width: 10%">Tên Phòng</th>
											<th style="width: 20%">Loại Phòng</th>
											<th style="width: 20%">Trạng thái</th>
											<th style="width: 10%">Mô tả</th>
											<th style="width: 40%">Chức năng</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in room)
										{
											<tr>
												<td>@item.RoomId</td>
												<td>@item.RoomType</td>
												<td>@item.Status</td>
												<td>@item.CleanRoom</td>
												<td>
													<a asp-controller="" asp-action="" class="btn btn-primary btn-sm">
														<i class="fas fa-folder"></i>
														Chi tiết
													</a>

													<a asp-controller="" asp-action="" class="btn btn-info btn-sm">
														<i class="fas fa-pencil-alt"></i>
														Chỉnh sửa
													</a>

													<a data-room-type-id="@item.RoomId" class="btn btn-danger btn-sm roomType-delete">
														<i class="fas fa-pencil-alt"></i>
														Xóa
													</a>
												</td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Nội dung bên phải -->
	<div class="right-panel col-4 pl-0 pr-0">
	</div>
</div>