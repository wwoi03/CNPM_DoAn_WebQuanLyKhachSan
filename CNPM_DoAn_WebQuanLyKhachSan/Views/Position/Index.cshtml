@using CNPM_DoAn_WebQuanLyKhachSan.Models.ViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	var position = ViewBag.position;

}
@model PositionVM


<div class="main-container d-flex">
	<!-- Nội dung bên trái -->
	<div class="left-panel col-8 pl-0 pr-0">
		<div class="content container-fluid">
			<div class="page-header">
				<div class="row align-items-center">
					<div class="col">
						<div class="">
							<h4 class="card-title float-left mt-2" style="font-size: 24px">Tất cả chức vụ</h4>
							<a class="btn btn-primary float-right veiwbutton"id="position-create">Thêm chức vụ</a>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="card card-table">
						<div class="card-body booking_card">
							<div class="table-responsive">
								<table class="datatable table table-stripped table table-hover table-center mb-0">
									<thead>
										<tr>
											<th style="width: 10%">Mã vị trí</th>
											<th style="width: 20%"> Tên</th>
											<th style="width: 20%">Hệ số lương</th>
											<th style="width: 10%">Hệ số thưởng</th>
											<th style="width: 40%">Chức năng</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in position)
										{
											<tr>
												<td>@item.PositionId</td>	
												<td>@item.Name</td>
												<td>@item.CoefficientsSalary</td>
												<td>@item.BonusCoefficient</td>
												<td>
													<a data-position-id="@item.PositionId" class="btn btn-info btn-sm position-details">
														<i class="fas fa-pencil-alt"></i>
														Chi tiết
													</a>

													<a data-position-id="@item.PositionId" class="btn btn-info btn-sm position-edit">
														<i class="fas fa-pencil-alt"></i>
														Chỉnh sửa
													</a>

													<a data-position-id="@item.PositionId" class="btn btn-danger btn-sm position-delete">
														<i class="fas fa-pencil-alt"></i>
														Xóa
													</a>
												</td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Nội dung bên phải -->
	<div class="right-panel col-4 pl-0 pr-0">
	</div>
</div>